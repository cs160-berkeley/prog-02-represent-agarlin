<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   >

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0B2C53">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:ignore="ContentDescription"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        />

        <TextView
            android:id="@+id/textgrid"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal|top"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textgrid1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingRight="6dp"
            android:layout_marginTop="35dp"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="left|top" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/More"
                android:id="@+id/More_button"
                android:width="9dp"
                android:background="#0B2C53"
                android:textColor="@color/white"
                android:stateListAnimator="@null"
                android:textSize="18dp"
                android:layout_marginTop="69dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email" />
            <ImageView
                android:id="@+id/email"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:ignore="ContentDescription"
                android:adjustViewBounds="true"
                android:src="@drawable/mail"

                android:layout_alignBottom="@+id/textgrid4"
                android:layout_toRightOf="@+id/tweet"
                android:layout_toEndOf="@+id/tweet" />
            <TextView
                android:id="@+id/textgrid4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="left|top"

                android:layout_marginBottom="16sp"

                android:layout_above="@+id/web"
                android:layout_alignLeft="@+id/textgrid3"
                android:layout_alignStart="@+id/textgrid3" />
            <ImageView
                android:id="@+id/web"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:ignore="ContentDescription"
                android:adjustViewBounds="true"
                android:src="@drawable/webicon"
                android:layout_gravity="left|bottom"
                android:layout_alignBottom="@+id/textgrid3"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email" />
            <TextView
                android:id="@+id/textgrid3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:paddingRight="6dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="left|top"


                android:layout_marginStart="11dp"
                android:layout_marginTop="81dp"
                android:layout_below="@+id/More_button"
                android:layout_toRightOf="@+id/web"
                android:layout_toEndOf="@+id/web" />
            <!--<com.twitter.sdk.android.tweetui.TweetView-->
                <!--android:id="@+id/rep_tweet"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
           <TextView
               android:id="@+id/twit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="25dp"
               android:paddingStart="25dp"
               android:textColor="#FFFFFF"
               android:textSize="12sp"
               android:layout_gravity="left|bottom"

               android:background="#143960"
               android:layout_marginBottom="17dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true" />

           <ImageView
               android:id="@+id/tweet"
               android:layout_width="20dp"
               android:layout_height="20dp"
               tools:ignore="ContentDescription"
               android:adjustViewBounds="true"
               android:src="@drawable/twit"
               android:layout_gravity="left|bottom"
               android:layout_alignBottom="@+id/twit"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_marginBottom="8dp" />
   </RelativeLayout>
    </FrameLayout>


</RelativeLayout>